[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true

[gpg]
    format = ssh

[gpg "ssh"]
    program = {{.chezmoi.homeDir}}/AppData/Local/1Password/app/8/op-ssh-sign.exe

[commit]
    gpgsign = true
    cleanup = strip
    template = ~/.config/git/common/message.txt

